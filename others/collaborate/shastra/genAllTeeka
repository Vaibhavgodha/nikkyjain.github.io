#!/bin/sh

convert=
[ "$1" = "-c" ] && convert="-c"
launchDir=$PWD

export dbDir=$(echo $PWD | perl -i -pe 's/(.*jainData).*/$1/g')
curDir=$dbDir/others/collaborate/teeka
# To to 'teeka' directory
cd $curDir

while read oDir; do
    oDir=$(echo "$oDir" | tr -d '\r')
    echo $curDir/$oDir
    cd $curDir/$oDir
    while read iDir; do
        iDir=$(echo "$iDir" | tr -d '\r')
        cd $curDir/$oDir/$iDir
        echo $PWD
        $curDir/../shastra/createTeeka
    done < "index.txt"
    cd $curDir
done < "index.txt"

# Go back from where you started
cd $launchDir
